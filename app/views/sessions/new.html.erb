<% provide(:title, "Log in") %>
 <% provide(:sectionclass, "text-center content-section") %>
 <% provide(:divclass, "none") %>
</div>
</div>
</div>


    <div class="container">
        <div class="row">
            <div class="col-md-3 col-lg-offset-1">
                <h1>Log in</h1>
                <p class="lead">New user? <%= link_to "Sign up now!", signup_path %></p>
              
            </div>
  <div class="col-md-6 col-md-offset-1">

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

        <span class="input input--kuro">
        <%= f.email_field :email, class:"input__field input__field--kuro form_control" %>
      
        <%= f.label(:email, class:"input__label input__label--kuro") do %>
            <%= '<span class="input__label-content input__label-content--kuro">Email</span>'.html_safe %>
        <% end %>
        </span>
    

        <span class="input input--kuro">
        <%= f.password_field :password, class:"input__field input__field--kuro form_control" %>
      
        <%= f.label(:password, class:"input__label input__label--kuro") do %>
            <%= '<span class="input__label-content input__label-content--kuro">Password</span>'.html_safe %>
        <% end %>
        </span>
        
        <span class="input input--kuro">
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %> Remember Me
        <% end %>
        </span>
        
        <span class="input input--kuro">
        <%= f.submit "Log in", class: "btn btn-danger btn-block" %>
        </span>
        <% end %>
        

  </div>
</div>
</div> 
  </div> 
  </div>

  

  </section>

